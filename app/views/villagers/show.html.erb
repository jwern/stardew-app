<h1><%= @villager.name %></h1>

<%= headshot(@villager.name) %>
<br>
<h4>Birth Date:</h4>
<%= @villager.birth_season %>
<%= @villager.birth_day %><br>

<%= render 'display_preferences' %>
<br>

<h4>Additional Info</h4>
<i><div class="additional-info"><%= sanitize(@villager.extra_info) %></i></div><br>
<br>
<br>
<h4>Add Preferences</h4>
<%= render "preferences/form", model: Preference.new, villager_select: @villager.id %><br>

<p>
  <%= link_to 'Edit Villager', edit_villager_path(@villager), class: "edit-villager-link" %><br>
</p>
