<h1>Edit Villager Info</h1>

<%= render "form", model: @villager  %>
<table>
  <tr>
    <th>Item</th>
    <th>Preference</th>
  </tr>

<% @preferences.each do |pref| %>
  <tr>
    <td><%= item_name(pref.item_id) %></td>
    <td><%= pref.opinion %></td>
    <td><%= button_to 'Delete', preference_path(pref),
                                     method: :delete,
                                     data: { confirm: "Really delete this preference?" } %></td>
  </tr>
<% end %>
</table>
<%= button_to 'Delete Villager', villager_path(@villager),
                                 method: :delete,
                                 data: { confirm: "Really delete #{@villager.name}?" } %>

<%= link_to "#{@villager.name}'s Page", @villager %>
