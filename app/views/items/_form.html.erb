<%= form_with model: model, local: true do |form| %>
<% if model.errors.any? %>
  <div class="error_explanation">
    <h3><%= "#{model.class} not saved:" %></h3>
    <ul>
    <% model.errors.full_messages.each do |message| %>
      <div id="error_message"><li><%= message %></li></div>
    <% end %>
    </ul>
  </div>
<% end %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>
  <p>
    <%= form.label :category %><br>
    <%= form.select :category, Item::CATEGORIES %><br>
    <div id="sale_price_box">
      <%= form.label :sale_price %><br>
      <%= form.text_field :sale_price %>
    </div>
  </p>
  <p>
    <%= form.submit %>
  </p>
  <% end %>
