<div class="full-page">
  <div class="center-it inner-page">
    <div class="individual-page-title">
      <h1><%= @item.name %></h1>
      <span class="individual-page-pic"><%= item_pic(@item.name) %></span>
    </div>
    <table>
      <tr>
        <th class="header", scope="col">Game</th>
        <td><%= @game.name %></td>
      </tr>
      <tr>
        <th class="header", scope="col">Category</th>
        <td><%= @item.category %></td>
      </tr>
      <tr>
        <th class="header", scope="col">Sale Price</th>
        <td><%= @item.sale_price %></td>
      </tr>
      <tr>
        <th class="header", scope="col">Preferences</th>
        <td><%= render 'display_preferences' %></td>
      </tr>
      <tr>
        <th class="header", scope="col">Add Preference</th>
        <td><%= render "preferences/form", model: Preference.new, item_select: @item.id %></td>
      </tr>
      <tr>
        <th class="header", scope="col">Additional Info</th>
        <td class="additional-info"><%= sanitize(@item.extra_info) %></td>
      </tr>
      <tr>
        <th class="header", scope="col">Updates?</th>
        <td><%= link_to 'Edit Item', edit_game_item_path, class: "button edit-item-link" %></td>
      </tr>
    </table>
    <div>
      <%= link_to "#{@game.name} Items", game_items_path, class: "button" %>
    </div>
  </div>
</div>
